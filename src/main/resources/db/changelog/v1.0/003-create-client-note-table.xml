<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3" author="Anastasia">
        <createTable tableName="client_note">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="comments" type="VARCHAR(4000)"/>
            <column name="guid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_by_user_id" type="BIGINT"/>
            <column name="modified_by_user_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="client_note"
                baseColumnNames="client_id"
                referencedTableName="client"
                referencedColumnNames="id"
                constraintName="fk_note_client"/>

        <addForeignKeyConstraint
                baseTableName="client_note"
                baseColumnNames="created_by_user_id"
                referencedTableName="company_user"
                referencedColumnNames="id"
                constraintName="fk_note_created_by"/>

        <addForeignKeyConstraint
                baseTableName="client_note"
                baseColumnNames="modified_by_user_id"
                referencedTableName="company_user"
                referencedColumnNames="id"
                constraintName="fk_note_modified_by"/>
    </changeSet>

</databaseChangeLog>
